	email = albertoalcolea@gmail.com

[core]
	excludesfile = ~/.gitignore_global

[color]
	status = auto
	branch = auto
	diff = auto
	interactive = auto

[diff]
	tool = meld

[merge]
	tool = meld

[fetch]
	prune = true

[alias]
	co = checkout
	dt = difftool --dir-diff
	s = status -sb
	b = !git branch | grep '*'
	undo = reset --soft HEAD~1
	glog = log --graph --oneline
