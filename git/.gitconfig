[user]
	# Do not store here sensitive information such as the user or the email.
	# Add it in `~/.gitconfig.local`
	useConfigOnly = true

[include]
	path = ~/.gitconfig.local

[core]
	excludesfile = ~/.gitignore_global

[color]
	status = auto
	branch = auto
	diff = auto
	interactive = auto

[diff]
	tool = meld

[merge]
	tool = meld

[fetch]
	prune = true

[log]
	abbrevCommit = true

[alias]
	co = checkout
	dt = difftool --dir-diff
	s = status -sb
	b = !git branch | grep '*'
	l = log
	lg = log --graph --oneline
	last = log -1 --stat
	undo = reset --soft HEAD~1
