#!/bin/bash

if [ $# -lt 2 ]; then
	echo "Usage: $(basename $0) user notify-send-params"
	echo "  Eg: $(basename $0) alberto \"Backup status\" \"Today's backup done\""
	exit 1
fi

user=$1
shift

uid=$(id -u $user)
display=":1"
dbus=unix:path=/run/user/$uid/bus

sudo -u $user DISPLAY=${display} \
	      DBUS_SESSION_BUS_ADDRESS=$dbus \
	      /usr/bin/notify-send "$@"
